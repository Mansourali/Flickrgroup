<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_detail_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="#eeeeee">
    
    <ImageView
        android:id="@+id/list_view_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#ffffff"/>
   
    <TextView
        android:id="@+id/list_view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:layout_toRightOf="@id/list_view_image"
		android:textAppearance="@android:style/TextAppearance.Medium"/>

    <TextView
        android:id="@+id/list_view_ownername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/list_view_image"
        android:layout_below="@id/list_view_title"
        android:textAppearance="@android:style/TextAppearance.Medium"/>
    
</RelativeLayout>   